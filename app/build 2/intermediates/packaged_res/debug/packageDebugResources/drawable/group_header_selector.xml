<?xml version="1.0" encoding="utf-8"?>
<!--
    Selector drawable for group headers in the RecyclerView.
    
    This selector provides visual feedback for the group header's state:
    - Selected state: Uses a darker purple (purple_700) to indicate active selection
    - Default state: Uses the standard purple (purple_500) for normal state
    
    Used in:
    - fetch_object_list_group.xml as background for the header row
    - Provides visual feedback when a group is selected or interacted with
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:drawable="@color/purple_700"/>
    <item android:drawable="@color/purple_500"/>
</selector> 