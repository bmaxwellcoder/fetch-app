<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for table headers within groups.
    
    This layout provides:
    - Consistent styling for table headers
    - Proper accessibility support
    - Material Design compliant appearance
    - Reusable across different contexts
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_item_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center">

    <TextView
        android:id="@+id/itemIdText"
        style="@style/TableHeaderTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/id_header" />

    <TextView
        android:id="@+id/itemNameText"
        style="@style/TableHeaderTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/name_header" />

</LinearLayout> 